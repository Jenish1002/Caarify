<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/choosecar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
         android:text="Mini Service"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1.7dp"
        android:layout_marginTop="35dp"
        android:background="#66535050"
        app:layout_constraintTop_toBottomOf="@+id/choosecar" />

    <Button
        android:id="@+id/btnchoosecars"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@drawable/bg_white_circular"
        android:elevation="2dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:text="@string/btn_choose_car_booking"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/DarkGray"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/spinner_OilType"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_white_circular"
        android:elevation="1dp"
        android:fontFamily="@font/roboto"
        android:spinnerDropDownItemStyle="@style/SpinnerStyle"
        android:spinnerMode="dropdown"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnchoosecars" />

</androidx.constraintlayout.widget.ConstraintLayout>